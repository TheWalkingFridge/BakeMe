<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/step"
        style="@style/step_holder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            style="@style/step_line"
            android:contentDescription="@string/step_contentDescription"/>
        <ImageView
            android:id="@+id/dot"
            style="@style/step_dot"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <TextView
        android:id="@+id/step_name"
        style="@style/step_text"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/step"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/step"
        app:layout_constraintTop_toTopOf="@id/step"
        tools:text="Boil egg" />

</android.support.constraint.ConstraintLayout>