<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/el_group_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/expandable_header_marginRight"
        android:layout_marginStart="@dimen/expandable_header_marginStart"
        android:layout_marginTop="@dimen/expandable_header_marginTop"
        android:fontFamily="@font/acme"
        android:textSize="@dimen/expandable_header_size"
        tools:text="12" />

    <TextView
        android:id="@+id/el_group_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/el_group_amount"
        android:layout_toEndOf="@id/el_group_amount"
        android:fontFamily="@font/acme"
        android:textSize="@dimen/expandable_header_size"
        tools:text="Ingredients" />

</RelativeLayout>